{
  "compilerOptions": {
    "declarationDir": "types",
    "declaration": true,
    "strict": true,
    "target": "ES2015",
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/*.ts",
  ],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
    }
  }
}
